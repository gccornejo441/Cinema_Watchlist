<div class="row justify-content-center">
  <% if (message != '') { %>
  <div class="col-lg-6 text-center alert alert-success alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

<div class="row justify-content-center">
  <% if (validation != '') { %>
  <div class="col-lg-9 text-center alert alert-danger alert-dismissible fade show" role="alert">
      <h3>
        <%= validation %>
      </h3>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

