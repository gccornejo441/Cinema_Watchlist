
  <!-- MODAL EDIT -->
  <form action="/dashboard/edit/<%- result._id %>" method="POST">
    <div class="modal fade" id="myModal<%- result._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleMyModal">Edit Entry</h5>
          
          <i type="button" data-dismiss="modal" style="font-size: 1.6rem" aria-label="Close"
            class="bi bi-x-circle-fill close btn-lg"></i>
  
        </div>
        <div class="modal-body">
          <div class="row g-2">
            <div class="col-md">
              <select class="form-select">
                  <option selected disabled>Categories</option>
                  <option value="<%- result.genre %>">Genre</option>
                  <option value="<%- result.title %>">Title</option>
                  <option value="<%- result.director %>">Director</option>
                  <option value="<%- result['release date'] %>">Release Date</option>
                  <option value="<%- result.producer %>">Producer</option>
                  <option value="<%- result.rating %>">Rating</option>
              </select>
            </div>
          </div>
  
          <div class="col-md">
            <input class="form-control" maxlength="70" placeholder="e.g., Saving Private Ryan" />
          </div>
        </div>
  
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  </div>
  </form>
<!-- MODAL EDIT END -->

<!-- MODAL DELETE -->
<form action="/dashboard/delete/<%- result._id %>" method="POST">
  <div class="modal fade" id="myModalDelete<%- result._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleMyModal">Delete Entry</h5>
          <i type="button" data-dismiss="modal" style="font-size: 1.6rem" aria-label="Close"
            class="bi bi-x-circle-fill close btn-lg"></i>
        </div>
        <div class="modal-body">
          <strong>Are you sure you want to delete
            <p><%- result._id %> ?</p>
          </strong>
          <p>This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" id="deleteBtn" class="btn btn-danger">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
<!-- MODAL DELETE END -->
