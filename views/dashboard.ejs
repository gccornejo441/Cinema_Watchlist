<body class="d-flex flex-column">
  <%- include ('partials/modal'); %>
  
  <div class="container-fluid">
    <div class="row">
      <main class="col-md-9 mx-lg-auto col-lg-10 px-md-4">
        
        <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
        <h2>Current Movies</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm" id="mytable">
            <thead>
              <tr>
                <th>Genre</th>
                <th>Title</th>
                <th>Director</th>
                <th>Release Date</th>
                <th>Producer</th>
                <th>Rating</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% result.forEach((result)=> { %>
                
                <tr>
                  <td>
                    <%- result.genre[0].toUpperCase() + result.genre.substring(1) %>
                  </td>
                  <td>
                    <%- result.title %>
                  </td>
                  <td>
                    <%- result.director %>
                  </td>
                  <td>
                    <%- result['release date'] %>
                  </td>
                  <td>
                    <%- result.producer %>
                  </td>
                  <td>
                    <%- result.rating %>
                  </td>
                  <td>
                    <div class="d-flex">
                      <form action="/dashboard/edit/<%- result._id %>" method="GET">
                        <button 
                        type="submit"
                        class="btn btn-sm btn-info edit" 
                        >
                        <i class="bi bi-pencil-fill"></i>
                      </button>
                    </form>
                    <a
                      href="/dashboard/delete/<%- result._id %>"
                      type="button"
                      class="btn btn-sm btn-danger delete"
                      data-toggle="modal" 
                      data-target="#myModalDelete<%- result._id %>" 
                      >
                      <i class="bi bi-trash-fill"></i>
                    </a>
                  </div>
                </td>
                <td>
                  <%- include ('partials/modalDlt', { result: result }); %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
  
  

<%- include ('partials/footer-post'); %>

